generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SalaryType {
  id          Int    @id @default(autoincrement())
  type        String
  description String
  employeeies Employee[]
  @@map("salary_type")
}

model Company {
  id      Int    @id @default(autoincrement())
  name    String
  address String
  employeeies Employee[]
  @@map("company")
}

model Employee {
  id       Int    @id @default(autoincrement())
  username String
  email    String
  companyId Int     @map("company_id")
  company   Company @relation(fields: [companyId], references: [id])
  salary    Float
  salaryTypeId Int  @map("salary_type_id")
  salaryType SalaryType @relation(fields: [salaryTypeId], references: [id])
  payDate   Int?    @map("pay_date")
  @@map("employee")
}
